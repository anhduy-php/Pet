@model Design.Models.Dto.BillsDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm col-md ">
            <div class="h-100 bg-secondary rounded p-4">
                <h3>Edit pages</h3>
                <div class="d-flex align-items-center pt-3">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="bill_Id" />
                        <table>
                            <tr>
                                <td>
                                    <label asp-for="bill_UserName" class="control-label"></label>
                                </td>
                                <td>
                                    <input asp-for="bill_Total" class="form-control" />
                                    <span asp-validation-for="bill_Total" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="bill_StatusPayment" class="control-label"></label>
                                </td>
                                <td>
                                    <input class="form-check-input" asp-for="bill_StatusPayment" /> @Html.DisplayNameFor(model => model.bill_StatusPayment)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="bill_StatusReviceOrder" class="control-label"></label>
                                </td>
                                <td>
                                    <input class="form-check-input" asp-for="bill_StatusReviceOrder" /> @Html.DisplayNameFor(model => model.bill_StatusReviceOrder)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="bill_Total" class="control-label"></label>
                                </td>
                                <td>
                                    <input asp-for="bill_Total" class="form-control" />
                                    <span asp-validation-for="bill_Total" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="bill_StartDateTime" class="control-label"></label>
                                </td>
                                <td>
                                    <input asp-for="bill_StartDateTime" class="form-control" />
                                    <span asp-validation-for="bill_StartDateTime" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="bill_Cancel" class="control-label"></label>
                                </td>
                                <td>
                                    <input class="form-check-input" asp-for="bill_Cancel" /> @Html.DisplayNameFor(model => model.bill_Cancel)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
