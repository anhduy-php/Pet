@model IEnumerable<Design.Models.Dto.RolesDto>;
@{
    ViewData["Title"] = "Home Page";
    int iRole = 1;
}
<!-- Widgets Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm col-md ">
            <div class="h-100 bg-secondary rounded p-4">
                <div class="d-flex align-items-center pt-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">RolesName</th>
                                <th scope="col"></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">

                                        @iRole
                                        @{
                                            iRole = iRole + 1;
                                        }

                                    </th>
                                    <td>@item.RoleName</td>
                                    
                                    <td>
                                        <a href="##">Edit</a>/
                                        <a href="##">Delete</a>/
                                        <a href="##">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Widgets End -->