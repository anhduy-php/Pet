@model IEnumerable<Design.Models.Dto.PetsDto>;
@{
    ViewData["Title"] = "Home Page";
    int iUser = 1;
}
<!-- Widgets Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm col-md ">
            <div class="h-100 bg-secondary rounded p-4">
                <div class="d-flex align-items-center pt-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col" width="15%">Image</th>
                                <th scope="col">Price</th>
                                <th scope="col">OrtherName</th>
                                <th scope="col">Origin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">

                                        @iUser
                                        @{
                                            iUser = iUser + 1;
                                        }

                                    </th>
                                    <td>@item.pet_Name</td>
                                    <td>
                                        <img src="~/@item.pet_Image1" alt="@item.pet_Image1" width="20%" />
                                    </td>
                                    <td>@item.pet_Price</td>
                                    <td>@item.pet_OrtherName</td>
                                    <td>@item.pet_Origin</td>
                                    <td>
                                        <a href="##">Edit</a>/
                                        <a href="##">Delete</a>/
                                        <a href="##">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Widgets End -->